---
import AstroIcon from "./icons/AstroIcon.astro";
import Tailwind from "./icons/Tailwind.astro";
import Html from "./icons/Html.astro";
import Css from "./icons/Css.astro";
import JavaScript from "./icons/JavaScript.astro";
import LinkButton from "./LinkButton.astro";
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import ReactIcon from "./icons/React.astro";
import SassIcon from "./icons/Sass.astro";
const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "bg-purple-500 text-purple-100",
    icon: AstroIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-red-200 text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-200 text-white",
    icon: Css,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500 text-yellow-100",
    icon: JavaScript,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-white",
    icon: ReactIcon,
  },
  SASS: {
    name: "Sass",
    class: "bg-[#CC6699] text-white",
    icon: SassIcon,
  },
};

const PROJECTS = [
  {
    title: "Mi Portfolio",
    description: "Created with Midu learning Astro and Tailwind CSS",
    link: "sofi-navas-portfoliodev.netlify.app/",
    github: "https://github.com/sofinavas/portfolio-sofi",
    image: "/img/projects/foto-proyecto.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS],
  },
  {
    title: "Desarrolladora Web - Proyecto Real",
    description:
      "Formé parte del Proyecto Real de Coderhouse, donde junto a otro Frontend Developer desarrollamos la web de un cliente real, gestionando el código con ramas en GitHub. Trabajamos en equipo con Project Managers, Diseñadores UX/UI y especialistas en Marketing Digital, logrando una solución integral alineada con sus necesidades.",
    link: "https://dvincenzini.vercel.app/",
    github: "https://github.com/ChristianMagallanes24/proyectodaniela",
    image: "/img/projects/proyecto-daniela.webp",
    tags: [TAGS.REACT, TAGS.CSS, TAGS.SASS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
